<item name="operator" type="item" color="operator">[-=\+\*\/\|]</item>

<item name="bracket" type="item" color="brackets">[\(\)\[\]]</item>

<item name="keywords" type="keywords" color="keywords" fontstyle="bold">\b(break|case|catch|continue|default|do|else|false|finally|for|foreach|if|in|lock|null|return|switch|throw|true|try|using|while|yield)\b</item>

